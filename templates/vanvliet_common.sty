% PDF setup
%
% Graphics and color
\RequirePackage[pdftex]{graphicx}
\RequirePackage{xcolor} 

\RequirePackage[pdftex, bookmarks, colorlinks, breaklinks]{hyperref}
\definecolor{darkblue}{rgb}{0,0,.4}
\hypersetup{
    linkcolor=darkblue,
    citecolor=darkblue,
    filecolor=black,
    urlcolor=black
}
\makeatletter
\AtBeginDocument{
    \hypersetup{
        pdftitle = {\@title},
        pdfauthor = {\@author}
    }
}
\makeatother


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Sizes and margins

% For clarity, I prefer white space between the paragraphs
\RequirePackage[parfill]{parskip}

% Increase line spacing a bit
%\RequirePackage{setspace}
%\onehalfspacing

% Text layout
\RequirePackage[
	left=1cm,
	right=6.5cm,
	top=1.5cm,
	bottom=2.5cm,
	marginparwidth=5cm,
	marginparsep=0.5cm,
]{geometry}

% Move page footer to use the full extend of the page
\RequirePackage{fancyhdr}
\fancyhfoffset{1cm}

% Commands to enable/disable the margin
\newcommand{\disablemargin}{
	\newgeometry{
		inner=2cm,
		outer=2cm
	}
	\fancyhfoffset{0cm}
}
\newcommand{\enablemargin}{
	\restoregeometry
	\fancyhfoffset{5cm}
}

% Environment that disables the margin
\newenvironment{nomargin}{
	\disablemargin
}{
	\enablemargin
}

% Blank pages
\RequirePackage{xspace}
\RequirePackage{afterpage}
\newcommand\blankpage{%
    \null
    \thispagestyle{empty}%
    %\addtocounter{page}{-1}%
    \newpage}


%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%%
% Figure and table captions

\RequirePackage{floatrow}
\RequirePackage{caption}

% For narrow floats, place caption in the margin
\floatsetup{
	margins=hangright,
	capposition=beside,
    capbesideposition={top,right},
    floatwidth=\textwidth
}
\captionsetup{
	labelfont=bf,
	font=small
}

% For wide floats, place caption below the float
\floatsetup[widefloat]{
	capposition=bottom,
    floatwidth=\textwidth
}
\floatsetup[widefigure]{
	captionskip=-1ex
}
\captionsetup[widefloat]{
	margin=1.5cm
}


